<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="edu.gatech.cs2340.a2340_android_dev_project.controllers.SubmitPurityActivity">

    <Button
        android:id="@+id/submitPurityButton"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:text="Submit"
        tools:layout_editor_absoluteX="148dp"
        tools:layout_editor_absoluteY="401dp" />

    <Spinner
        android:id="@+id/conditionSpinner"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/locationSelectButton"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="167dp" />

    <Button
        android:id="@+id/locationSelecterButton"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="Select a location..."
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="67dp" />

    <EditText
        android:id="@+id/virusNum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="numberDecimal"
        android:text="Virus PPM"
        tools:layout_editor_absoluteX="83dp"
        tools:layout_editor_absoluteY="232dp" />

    <EditText
        android:id="@+id/contaminantNum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="numberDecimal"
        android:text="Contaminant PPM"
        tools:layout_editor_absoluteX="83dp"
        tools:layout_editor_absoluteY="316dp" />

</android.support.constraint.ConstraintLayout>
